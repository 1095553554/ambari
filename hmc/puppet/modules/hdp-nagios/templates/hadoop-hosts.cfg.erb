<%scope.function_hdp_nagios_all_hosts().each do |host|-%>
define host {
        alias        <%=host%>
        host_name    <%=host%>
        use          linux-server
        address      <%=host%>
        check_interval         0.25
        retry_interval         0.25
        max_check_attempts     4
}

<%end%>
